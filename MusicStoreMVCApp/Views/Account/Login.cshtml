@model MusicStoreMVCApp.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="mt-5" style="display: flex; flex-direction: column; align-items: center;">
    <h2 class="mb-4">@ViewBag.Title</h2>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="container mb-3">
            <div class="row mb-3">
                @Html.LabelFor(m => m.Email, new { @class = "ms-1 mb-1 px-0" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
            <div class="row mb-3">
                @Html.LabelFor(m => m.Password, new { @class = "control-label ms-1 mb-1 px-0" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
            <div class="row">
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" style="align-self: center;" value="Log in" />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
