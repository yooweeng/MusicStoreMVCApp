@model IEnumerable<MusicStoreMVCApp.Movie>

@{
    ViewBag.Title = "Index";
}

@section Scripts {
    <script>
        let selectedId;

        function modifySelectedId(id) {
            selectedId = id;
        }

        function deleteMovie() {
            $.ajax({
                url: "/Seller/Movie/" + selectedId,
                type: 'DELETE',
                success: function (data) { },
                error: function (error) {
                    console.error(error);
                }
            });
        }
    </script>
}

<div class="p-5 bg-secondary">
    <h2>Movies / Products</h2>

    <div class="container-fluid">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-3 card bg-dark text-white rounded-5 m-5 p-4">
                    <img src="@item.ImageUrl" class="card-img-top rounded-3">
                    <div class="card-body pb-0">
                        <h5 class="card-title">@item.MovieTitle</h5>
                        <p class="card-text">@item.Description</p>
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-success me-3"><i class="fa-sharp fa-solid fa-pencil" style="color: #ffffff;"></i></button>
                            <button class="btn btn-danger" onclick="modifySelectedId(@item.Id)" data-bs-toggle="modal" data-bs-target="#confirmDeletionModal"><i class="fa-solid fa-trash-can" style="color: #ffffff;"></i></button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="confirmDeletionModal" tabindex="-1" aria-labelledby="confirmDeletionModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="confirmDeletionModal">Confirm your action</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to remove current selected product/movie from the list? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <a class="btn btn-danger" onclick="deleteMovie()">Yes, I confirm</a>
                </div>
            </div>
        </div>
    </div>
</div>
