@model IEnumerable<MusicStoreMVCApp.ApprovalList>

@{
    ViewBag.Title = "Index";
}

<h2>Seller list for approval</h2>

<table class="table">
    <tr>
        <th>
            seller firstname
        </th>
        <th>
            Seller Last Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SellerFname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SellerLname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Approve", "Approve", new { id=item.Id }) |
            @Html.ActionLink("Reject", "Reject", new { id=item.Id })
        </td>
    </tr>
}

</table>
