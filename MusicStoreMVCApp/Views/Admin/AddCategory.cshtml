@model IEnumerable<MusicStoreMVCApp.Genre>
@{
    ViewBag.Title = "Add Category";
}

<div class="p-5">
    <h2>Add Category / Genre</h2>
    @using (Html.BeginForm("Genre", "Admin", FormMethod.Post))
    {
        <div class="container mt-5 mb-5 mx-0">
            <div class="row">
                <div class="col-lg-2">
                    @Html.TextBox("GenreType", null, new { @class = "form-control", placeholder = "eg. Action" })
                </div>
                <div class="col-2 mt-2 mt-lg-0">
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-plus" style="color: #ffffff;"></i>
                    </button>
                </div>
            </div>
        </div>
        <h2>Category / Genre List</h2>
        foreach (Genre item in @Model)
        {
            <div>
                @item.GenreType
            </div>
        }
    }
</div>
